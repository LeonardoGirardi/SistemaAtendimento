<AnchorPane nodeOrientation="LEFT_TO_RIGHT" prefHeight="456.0" prefWidth="596.0" styleClass="login_container" stylesheets="@../styles/login.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="programacao.s_a.controllers.LoginController">
   <VBox alignment="CENTER" prefHeight="456.0" prefWidth="206.0" styleClass="login_logo_container">
      <children>
         <ImageView fitHeight="115.0" fitWidth="170.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../images/LOGO%20SAC/LOGO_SAC_LEO_SEM%20FUNDO_V3.png" />
            </image>
         </ImageView>
      </children></VBox>
   <VBox layoutX="221.0" layoutY="14.0" prefHeight="434.0" prefWidth="348.0" styleClass="login_form_container">
      <Label prefHeight="39.0" prefWidth="204.0" text="Escolha seu tipo de conta" />
