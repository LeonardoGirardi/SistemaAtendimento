      <Button fx:id="signUpBtn" mnemonicParsing="false" text="Sign Up" />
      <Label fx:id="error_lbl" prefHeight="19.0" prefWidth="219.0" styleClass="error_lbl"/>
   </VBox>
</AnchorPane>
